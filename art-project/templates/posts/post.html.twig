{% extends 'base.html.twig' %}

{% block title %}Hello PostsController!{% endblock %}

{% block body %}

<div>
    <div class="max-w-full mx-10 lg:mx-64 my-10 px-4 py-4 bg-white rounded-lg shadow-lg">
        <div class="float-right">
            <p class="text-md font-thin">{{ post.createdat.format('d/m/Y G:i') }}</p>
        </div>
        <div class="float-left">
            <p class="text-md font-thin">By {{ post.users.name }}</p>
        </div>
        <div class="text-center">
            <p class="text-3xl font-semibold">{{ post.title }}</p>
        </div>
        <div class="mt-3">
            <p class="">{{ post.content | nl2br }}</p>
        </div>
        {% if post.files %}
        <div class="mt-10 mb-2">
            <a href="{{ asset('uploads/post/' ~ post.files) }}" class="px-4 py-2 border-2 border-gray-500 rounded"
                download="image.png"><i class="fa-solid fa-download mr-2"></i> {{post.files}}</a>
        </div>
        {% endif %}
        {% if post.users == app.user %}
        <div>
            <a href="{{ path('delete_post', {id: post.id}) }}"><button
                    class="bg-red-500 hover:bg-red-400 text-white font-bold py-2 px-4 mt-3 rounded"><i
                        class="fa-solid fa-trash-can"></i></button></a>
            <a href="{{ path('edit_post', {id: post.id}) }}"><button
                    class="bg-blue-500 hover:bg-blue-400 text-white font-bold py-2 px-4 mt-3 rounded"><i
                        class="fa-solid fa-pen-to-square"></i></button></a>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}