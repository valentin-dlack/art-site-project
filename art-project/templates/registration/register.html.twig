{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
{{ form_start(registrationForm) }}

<!-- ERRORS -->

{% if form_errors(registrationForm.email) %}
<div class="mx-auto max-w-sm bg-red-100 border border-red-500 text-red-800 px-4 py-3 rounded relative my-5"
    role="alert">
    <span class="block sm:inline"> {{ form_errors(registrationForm.email)}}</span>
</div>
{% endif %}
{% if form_errors(registrationForm.plainPassword.first) %}
<div class="mx-auto max-w-sm bg-red-100 border border-red-500 text-red-800 px-4 py-3 rounded relative my-5"
    role="alert">
    <span class="block sm:inline">{{ form_errors(registrationForm.plainPassword.first) }}</span>
</div>
{% endif %}

<div class="container max-w-sm mx-auto flex-1 flex flex-col items-center justify-center px-2 mt-10">
    <div class="bg-white px-6 py-8 rounded-lg shadow-md text-black w-full">
        <h1 class="mb-8 text-3xl text-center">Register</h1>
        <!-- FORM -->
        {{ form_row(registrationForm.email, {'label':false, 'errors':false}) }}
        {{ form_row(registrationForm.name, {'label':false}) }}
        {{ form_row(registrationForm.plainPassword.first, {'label':false, 'errors':false}) }}
        {{ form_row(registrationForm.plainPassword.second, {'label':false, 'errors':false}) }}
        {{ form_row(registrationForm.agreeTerms, {'label': 'I Agree to the Terms of Use '}) }}
        <div class="hidden">
            {{ form_row(registrationForm.user_state) }}
            {{ form_row(registrationForm.coms_state) }}
        </div>
        <button type="submit"
            class="text-white mt-5 w-full px-4 py-2 bg-blue-400 hover:bg-blue-300 rounded-md">Register</button>
        {{ form_end(registrationForm) }}
    </div>
</div>

<a class="mx-auto" href="login">
    <p class="text-center text-sm underline text-gray-600 mt-5">J'ai déjà un compte</p>
</a>
<a class="max-w-sm mx-auto" href="https://www.youtube.com/watch?v=0mYBSayCsH0">
    <p class="text-center text-sm underline text-gray-600 mb-4 mt-1">Terms and conditions of use.</p>
</a>
{% endblock %}