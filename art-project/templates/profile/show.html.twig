                    {{ user.name }} {% if "ROLE_ARTIST" in user.roles %}<i class="fa-solid fa-paintbrush"></i>{% endif %}
                    {% if "ROLE_ADMIN" in user.roles %}<i class="fa-solid fa-screwdriver-wrench"></i>{% endif %}
                    {% if "ROLE_USER" in user.roles %}<i class="fa-solid fa-user-check"></i>{% endif %}
                </p>
            </div>
            <div class="p-5">
                <p class="text-gray-700 text-base">
                    <span class="font-bold">Email:</span> {{ user.email }}
                </p>
            </div>
            <svg class="mx-auto" width="310" height="30" xmlns="http://www.w3.org/2000/svg">
