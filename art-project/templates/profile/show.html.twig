{% extends 'base.html.twig' %}

{% block title %}Hello ProfileController!{% endblock %}

{% block body %}

<!-- Profile page, 2 rows 1 card -->

<div class="flex flex-wrap">
    <div class="w-full mx-auto md:w-1/2 xl:w-1/3 p-3">
        <div class="bg-white border-transparent rounded-lg shadow-lg">
            <div class="bg-gray-400 border-b-2 border-gray-500 rounded-tl-lg rounded-tr-lg p-2">
                <h5 class="font-bold uppercase text-gray-600">Profile</h5>
            </div>
            <!-- Profile picture -->
            <div class="flex p-5 items-center">
                <img class="w-32 rounded-full" src="https://curie77.fr/wp-content/uploads/2016/04/icon-user.png"
                    alt="profile picture">
